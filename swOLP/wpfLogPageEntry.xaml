<UserControl x:Class="swOLP.wpfLogPageEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:swOLP"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Name="LogBlock" TextWrapping="NoWrap" HorizontalAlignment="Left" TextAlignment="Left" Margin="1,1,0,1" Grid.Column="0" Grid.ColumnSpan="2" Background="Transparent" >
            <TextBlock.ContextMenu>
                <ContextMenu Name="tbCM">
                    <MenuItem Name="tbCMItem" IsEnabled="False"/>
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>
        <TextBlock Name="InnerMessage" Visibility="Collapsed" TextWrapping="NoWrap" HorizontalAlignment="Left" TextAlignment="Left" Margin="25,2,0,2" Foreground="white"/>
    </StackPanel>
</UserControl>
